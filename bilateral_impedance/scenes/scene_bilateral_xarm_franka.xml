<mujoco model="xarm franka bilateral scene">
  <statistic center="0 0 0.4" extent="1"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="150" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.5 0.5 0.5" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.1 0.1 0.1" rgb2="0.3 0.3 0.3"
      markrgb="0.4 0.4 0.4" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <model name="xarm7" file="../../mujoco_menagerie/ufactory_xarm7/xarm7_passive.xml"/>
    <model name="franka" file="../../mujoco_menagerie/franka_fr3/fr3_torque.xml"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <body name="follower_arm_mount" pos="-0.35 0 0.0" quat="0.707107 0 0 0.707107">
      <!-- <geom type="cylinder" size=".06 .06" pos="0 0 .06" rgba="1 1 0 1"/> -->
      <attach model="franka" body="base" prefix="follower_"/>
    </body>

    <body name="master_arm_mount" pos="0.35 0 0.0" quat="0.707107 0 0 0.707107">
      <geom type="cylinder" size=".06 .06" pos="0 0 .06" rgba="0 1 0 0.8"/>
      <attach model="xarm7" body="link_base" prefix="master_"/>
    </body>

    <body name="obstacle block" pos="-0.35 0.4 0.1">
      <geom type="box" size="0.15 0.15 0.1" rgba="0.8 0.2 0.2 1"/>
    </body>
  </worldbody>
</mujoco>
